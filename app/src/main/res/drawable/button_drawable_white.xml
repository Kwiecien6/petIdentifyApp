<?xml version="1.0" encoding="utf-8" ?>
<!--相当于做了一张圆角的图片,然后给button作为背景图片-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置背景色-->
    <solid android:color="#ffffff" />
    <!--设置圆角-->
    <corners android:radius="20dip" />
    <padding
        android:bottom="40dp"
        android:left="20dp"
        android:right="20dp"
        android:top="40dp"
        />
    <!--设置边框线的宽度和颜色-->
</shape>
